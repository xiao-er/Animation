<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaoxiao.animation.MainActivity">

    <TextView
        android:id="@+id/txt_xml_animation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="xml中的使用"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txt_javacode_animation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="javaCode中的使用"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txt_combination_animation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="组合动画的使用"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

</LinearLayout>
